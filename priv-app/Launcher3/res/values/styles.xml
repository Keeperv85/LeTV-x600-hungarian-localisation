<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light.CustomOverscroll" parent="@android:style/Theme.DeviceDefault" />
    <style name="Theme.Dark.CustomOverscroll" parent="@android:style/Theme.DeviceDefault" />
    <style name="Icon">
        <item name="android:textColor">@color/workspace_icon_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#b0000000</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="Icon.AllApps" parent="@style/Icon">
        <item name="android:textColor">@color/quantum_panel_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:drawablePadding">@dimen/dynamic_grid_icon_drawable_padding</item>
        <item name="customShadows">false</item>
    </style>
    <style name="Icon.Folder" parent="@style/Icon">
        <item name="android:textColor">@color/workspace_icon_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="customShadows">false</item>
    </style>
    <style name="SearchButton" />
    <style name="DropTargetButtonContainer">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="DropTargetButtonBase">
        <item name="android:textSize">@dimen/drop_target_text_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:drawablePadding">7.5dip</item>
    </style>
    <style name="DropTargetButton" parent="@style/DropTargetButtonBase" />
    <style name="PreloadIcon">
        <item name="background">@drawable/virtual_preload</item>
        <item name="ringOutset">4.0dip</item>
        <item name="indicatorSize">4.0dip</item>
    </style>
    <style name="PreloadIcon.Folder" parent="@style/PreloadIcon">
        <item name="background">@drawable/virtual_preload_folder</item>
        <item name="ringOutset">4.0dip</item>
        <item name="indicatorSize">4.0dip</item>
    </style>
    <style name="Theme" parent="@android:style/Theme.Holo.Wallpaper.NoTitleBar" />
    <style name="LeTextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">hans-sans</item>
    </style>
    <style name="LeTextView.Shadow" parent="@style/LeTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">6.0</item>
    </style>
    <style name="LeTextView.WallpaperTheme" parent="@style/LeTextView">
        <item name="android:textSize">@dimen/wallpaper_and_theme_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="LeTextView.Shadow.OverviewPanelButton" parent="@style/LeTextView.Shadow">
        <item name="android:textSize">13.0sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3.0dip</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
